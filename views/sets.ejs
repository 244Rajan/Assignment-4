<!DOCTYPE html>
<html>
<head>
    <title>Lego Sets</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', { page: '/lego/sets' }) %>
    <h1>Collection</h1>
    <% if (sets.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Theme</th>
                    <th>Year</th>
                    <th>Num Parts</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% sets.forEach(function(set) { %>
                <tr>
                    <td><img src="<%= set.img_url %>" alt="<%= set.name %>"></td>
                    <td><%= set.name %></td>
                    <td><a href="/lego/sets?theme=<%= set.theme %>"><%= set.theme %></a></td>
                    <td><%= set.year %></td>
                    <td><%= set.num_parts %></td>
                    <td><a href="/lego/sets/<%= set.set_num %>">Details</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No sets found.</p>
    <% } %>
</body>
</html>